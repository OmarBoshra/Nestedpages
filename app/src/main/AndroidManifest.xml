<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.omarboshra.zero.nestedpages">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/mainicon"
        android:label="NestedPagesLite"
        android:supportsRtl="true"
        android:theme="@style/MyAppTheme">
        <activity android:name="com.omarboshra.zero.nestedpages.Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.omarboshra.zero.nestedpages.getthenote"
            android:configChanges="keyboardHidden|orientation|screenSize|keyboard" />
    </application>

</manifest>